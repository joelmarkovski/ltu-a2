generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Save {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  type      String
  payload   String
}

model QA {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  slug      String   @unique
  question  String
  answer    String
}

model Question {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  slug      String   @unique      // stable identifier (used by builder + lambda)
  question  String
  answer    String
}
